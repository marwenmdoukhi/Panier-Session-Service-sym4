{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>
    {% if items |length >0 %}

        <table class="table">

            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>QTE</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            {% for item in items %}
            <tbody>
            <tr>
                <td>{{ item.product.title }}</td>
                <td>{{ item.product.price }}</td>
                <td>{{ item.qte }}</td>
                <td>{{ item.product.price  * item.qte }}</td>
                <td>
                    <a href="{{ path('carte_remove',{'id':item.product.id}) }}" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash "></i>
                    </a>
                </td>
            </tr>
            {% endfor %}

            </tbody>
            <tfoot>
            <tr>
                <td colspan="3">total:</td>
                <td>
                    {{ total }}
                </td>
                <td></td>
            </tr>
            </tfoot>

        </table>


    {% else%}

        <p>Surprise, c'est vide !</p>

    {% endif %}

{% endblock %}
